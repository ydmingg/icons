{
	"compilerOptions": {
		/* 基础配置 */
		"target": "esnext",
		"lib": ["dom", "esnext"],
		"module": "ES2015",
		"removeComments": true,
		"declaration": true,
		"sourceMap": true,
		/* 强类型检查配置 */
		"strict": true,
		"noImplicitAny": false,
		/* 模块分析配置 */
		"baseUrl": "./",
		"outDir": "./lib",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"paths": {
			"@src/*": ["src/*"]
		}
	},
	"include": ["src", "pages"]
}
